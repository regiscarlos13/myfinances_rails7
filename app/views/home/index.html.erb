<% @card_title = "Dashboard - #{@year}" %>
<div class="row">
  <!-- Earnings (Monthly) Card Example -->
  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-primary shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
              Previsão Receitas Anual</div>
            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= number_to_currency(@budget_receitas.pluck(:total).sum) %></div>
          </div>
          <div class="col-auto">
            <i class="bi bi-currency-dollar fs-2 text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Earnings (Monthly) Card Example -->
  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-success shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
              Previsão Despesas Anual</div>
            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= number_to_currency(@budget_despesas.pluck(:total).sum) %></div>
          </div>
          <div class="col-auto">
            <i class="bi bi-cash fs-2 text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Earnings (Monthly) Card Example -->
  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-info shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Tasks
            </div>
            <div class="row no-gutters align-items-center">
              <div class="col-auto">
                <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">50%</div>
              </div>
              <div class="col">
                <div class="progress progress-sm mr-2">
                  <div class="progress-bar bg-info" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-auto">
            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Pending Requests Card Example -->
  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-warning shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
              Pending Requests</div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">18</div>
          </div>
          <div class="col-auto">
            <i class="fas fa-comments fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<hr>
<div class="row mt-3">
  <!-- Area Chart -->
  <div class="col-xl-8 col-lg-7">
    <div class="card shadow mb-4">
      <!-- Card Header - Dropdown -->
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Orçamento</h6>
      </div>
      <!-- Card Body -->
      <div class="card-body">
        <div class="chart-area">
          <div class="chartjs-size-monitor">
            
            <div class="chartjs-size-monitor-shrink">
              <div class="mb-4"></div>
            </div>
          </div>
          <%= line_chart [ {name: "Receitas",  data: [
                           ["Janeiro", @budget_receitas.pluck(:january).reject(&:blank?).sum],  
                           ["Fevereiro", @budget_receitas.pluck(:february).reject(&:blank?).sum],
                           ["Março", @budget_receitas.pluck(:march).reject(&:blank?).sum],
                           ["Abril", @budget_receitas.pluck(:april).reject(&:blank?).sum],
                           ["Maio", @budget_receitas.pluck(:may).reject(&:blank?).sum],
                           ["Junho", @budget_receitas.pluck(:june).reject(&:blank?).sum],
                           ["Julho", @budget_receitas.pluck(:july).reject(&:blank?).sum],
                           ["Agosto", @budget_receitas.pluck(:august).reject(&:blank?).sum],
                           ["Setembro", @budget_receitas.pluck(:september).reject(&:blank?).sum],
                           ["Outubro", @budget_receitas.pluck(:october).reject(&:blank?).sum],
                           ["Novembro", @budget_receitas.pluck(:november).reject(&:blank?).sum],
                           ["Dezembro", @budget_receitas.pluck(:december).reject(&:blank?).sum]
                            ]
                          }, 
                          {name: "Despesas", data: [
                            ["Janeiro", @budget_despesas.pluck(:january).reject(&:blank?).sum], 
                            ["Fevereiro", @budget_despesas.pluck(:february).reject(&:blank?).sum],
                            ["Março", @budget_despesas.pluck(:march).reject(&:blank?).sum],
                            ["Abril", @budget_despesas.pluck(:april).reject(&:blank?).sum],
                            ["Maio", @budget_despesas.pluck(:may).reject(&:blank?).sum],
                            ["Junho", @budget_despesas.pluck(:june).reject(&:blank?).sum],
                            ["Julho", @budget_despesas.pluck(:july).reject(&:blank?).sum],
                            ["Agosto", @budget_despesas.pluck(:august).reject(&:blank?).sum],
                            ["Setembro", @budget_despesas.pluck(:september).reject(&:blank?).sum],
                            ["Outubro", @budget_despesas.pluck(:october).reject(&:blank?).sum],
                            ["Novembro", @budget_despesas.pluck(:november).reject(&:blank?).sum],
                            ["Dezembro", @budget_despesas.pluck(:december).reject(&:blank?).sum]

                          ] }
                          ] %>
          
        </div>
      </div>
    </div>
  </div>
  <!-- Pie Chart -->
  <div class="col-xl-4 col-lg-5">
    <div class="card shadow mb-4">
      <!-- Card Header - Dropdown -->
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Orçamento Anual</h6>
      </div>
      <!-- Card Body -->
      <div class="card-body">
        <div class="chart-pie pt-4 pb-2">
          <div class="chartjs-size-monitor">
            <div class="chartjs-size-monitor-expand">
              <div class=""></div>
            </div>
            <div class="chartjs-size-monitor-shrink">
              <div class=""></div>
            </div>
          </div>
          <%= pie_chart  [['Receita', @budget_receitas.pluck(:total).sum],['Despesa', @budget_despesas.pluck(:total).sum]] %>
        </div>
      </div>
    </div>
  </div>
</div>
